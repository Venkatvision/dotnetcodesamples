@page
@model EMS_UI.Pages.EmployeeListModel
@{
    ViewData["Title"] = "Employee List";
}

<h2>Employee List</h2>

@if (Model.Employees?.Any() == true)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Number</th>
                <th>Name</th>
                <th>Department</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var emp in Model.Employees)
            {
                <tr>
                    <td>@emp.Number</td>
                    <td>@emp.Name</td>
                    <td>@emp.Department</td>
                    <td>@emp.Salary</td>
                    <td>
                        <a href="/EditEmployee?id=@emp.Number" class="btn btn-primary btn-sm">Edit</a>
                        <form method="post" style="display:inline;">
                            <input type="hidden" name="empId" value="@emp.Number" />
                            <button type="submit" class="btn btn-danger btn-sm" 
                                    onclick="return confirm('Are you sure you want to delete this record?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No employees found</p>
}